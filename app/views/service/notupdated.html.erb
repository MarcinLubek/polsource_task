<p id="notice"><%= notice %></p>

<h1>Notes not updated in a month</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "title" %></th>
      <th><%= sortable "content" %></th>
      <th><%= sortable "created_at", "Created" %></th>
      <th><%= sortable "updated_at", "Modified" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <%if 30.days.ago > note.updated_at%>
	      <tr>
	        <td><%= note.title %></td>
	        <td><%= note.content %></td>
	        <td><%= note.created_at %></td>
	        <td><%= note.updated_at %></td>
	        <td><%= link_to 'Show', note %></td>
	        <td><%= link_to 'Edit', edit_note_path(note) %></td>
	        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<%= will_paginate @notes %>
<br>
<%= link_to 'Back', notes_path %>